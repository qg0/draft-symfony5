{% extends 'base.html.twig' %}
{% block content %}
{% if is_blocked %}
    Вы заблокированы
{% else %}
    <div class="row">
        <div class="col-lg-12 text-center">
            <h1 class="mt-5">Авторизация</h1>
            <p class="lead">Введите логин и пароль</p>
        </div>
    </div>
    {% if error  %}
        <div class="alert alert-danger alert-dismissable w-50 m-auto">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">×</a>
            <strong></strong>Ошибка в логине или пароле
        </div>
    {% endif %}
    <form action="{{ path('login') }}" method="post" class="w-50 m-auto">
        <div class="form-group">
            <label for="username">Логин:</label>
            <input type="username" class="form-control" id="username" name="_username" value="{{ last_username }}"
                   placeholder="Логин" >
        </div>
        <div class="form-group">
            <label for="password">Пароль:</label>
            <input type="password" class="form-control" id="password" name="_password" autocomplete="off"
                   placeholder="Пароль">
        </div>
        <button type="submit" class="btn btn-primary">Войти</button>
    </form>
{% endif %}
{% endblock content %}
